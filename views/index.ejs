<!DOCTYPE html>
<html>
<head>
  <title>Credential Verification</title>
  <body>
    <%- include('header') %>
  
    <!-- Rest of your HTML content -->
  
  </body>
  <style>
    /* CSS Styling */
    body {
    
      font-family: Arial, sans-serif;
    }
    
    .header {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
      background-color: #f1f1f1;
    }

      .loading-spinner {
        border: 4px solid #f3f3f3; /* Light gray border */
        border-top: 4px solid #3498db; /* Blue top border */
        align-self: center;
        margin-top: auto;
        margin-bottom: auto;
        margin-left: auto;
        margin-right: auto;
        justify-content: center;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        animation: spin 1s linear infinite; /* Animation to spin the spinner */
    }
      @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    
    
    .header img {
      width: 150px;
      height: 60px;
    }
    
    .heading {
      text-align: center;
      font-size: 24px;
      margin-top: 20px;
    }
    
    .form-container {
      margin-top: 50px;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    
    .form-container form {
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .form-container input[type="text"] {
      padding: 10px;
      font-size: 16px;
      border-radius: 5px;
      border: 1px solid #ccc;
      margin-right: 10px;
    }
    
    .form-container input[type="submit"] {
      padding: 10px 20px;
      font-size: 16px;
      border-radius: 5px;
      background-color: #4CAF50;
      color: white;
      border: none;
      cursor: pointer;
    }
    #loading-text {
      font-family: Monospace;
      margin-top: 10px;
      font-size: 16px;
      text-align: center;
    }
      

    
  </style>
</head>
<br>
    <h1 class="heading">Credential Verification</h1>
  
  <div class="form-container">
    <form action="/hello" method="post">
      <input type="text" name="roll" placeholder="Enter your roll number">
      <input id = "submit-button" type="submit" value="Verify">
    </form>
  </div>
  <br></br>
  
  <div id="loading-spinner" class="loading-spinner" style="display: none;"></div>
  <div id="loading-text" CLASS ="loading-text"></div>
  




 


  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> 
  <script>
    $(document).ready(function() {
      var loadingTitles = [
      'Estalishing connections with Chainlink.....', 
      'Initializing Request......',
      'Fetching Node.......',
      'Interacting with off-Chain data via Decentralised Oracle Network.............',
      'Completing Request......'
    ];

    function updateLoadingText() {
      var loadingText = $('#loading-text');
      var currentTitle = loadingText.text();
      var currentIndex = loadingTitles.indexOf(currentTitle);

      // Get the next title or loop back to the beginning
      var nextIndex = (currentIndex + 1) % loadingTitles.length;
      var nextTitle = loadingTitles[nextIndex];

      loadingText.fadeOut(500, function() {
        loadingText.text(nextTitle).fadeIn(500);
      });
    }

      // Function to show the loading spinner
      function showLoadingSpinner() {
        $('#loading-spinner').show();
        setInterval(updateLoadingText, 8000);
      }
      
  
      // Function to hide the loading spinner
      function hideLoadingSpinner() {
        $('#loading-spinner').hide();
      }
  
      // Listen for form submit event
      $('form').on('submit', function() {
        showLoadingSpinner();
      });
  
      // Hide the loading spinner when the document finishes loading
      $(window).on('load', function() {
        hideLoadingSpinner();
      });
  
      // Hide the loading spinner after a delay of 3 seconds
      setTimeout(function() {
        hideLoadingSpinner();
      }, 3000);
    });
  </script>
   

</body>
</html>
